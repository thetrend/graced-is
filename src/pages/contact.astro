---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Email" description="This is the email page.">
  <main class="p-6">
    <h1 class="pb-6 text-2xl">contact me</h1>
    <div id="formMessage" class="pb-10"></div>
    <form id="contactForm" class="space-y-4">
      <div>
        <label for="name" class="mb-1 block font-semibold">Name</label>
        <input
          type="text"
          id="name"
          name="user_name"
          required
          class="w-full rounded border px-3 py-2"
        />
      </div>

      <div>
        <label for="email" class="mb-1 block font-semibold">Email</label>
        <input
          type="email"
          id="email"
          name="user_email"
          required
          class="w-full rounded border px-3 py-2"
        />
      </div>

      <div>
        <label for="message" class="mb-1 block font-semibold">Message</label>
        <textarea
          id="message"
          name="message"
          rows="4"
          required
          class="w-full rounded border px-3 py-2"></textarea>
      </div>

      <button
        type="submit"
        class="rounded bg-black px-4 py-2 text-white hover:bg-gray-900"
      >
        Send Message
      </button>
    </form>

    <script is:inline type="module" src="/src/scripts/email.js"></script>
  </main>
</BaseLayout>
